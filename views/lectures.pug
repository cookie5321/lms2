extends ./layout.pug

block title
    | 강의 목록

block content
    h1 나의 강의 목록
    each lecture in lectures
        div.lecture
            a(href='/lecture/' + lecture.lec_id) #{lecture.name} (#{lecture.lecturer})
            if user.role == 0
                a.button(href='/lecture/' + lecture.lec_id + '/write') 게시물 작성
    h1 모든 강의 목록
    each lecture in all_lectures 
        div.lecture
            | #{lecture.name} (#{lecture.lecturer})
            if user.role == 1
                a.button(href='/lecture/' + lecture.lec_id + '/apply') 수강 신청